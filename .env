# Queue Configuration
QUEUE_REPLICAS=3
MESSAGE_RETENTION_PERIOD=3600  # seconds

# Security (Optional)
ENABLE_TLS=false
CERT_PATH=/certs/node.crt
KEY_PATH=/certs/node.key