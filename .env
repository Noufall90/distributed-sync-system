# Node Configuration
NODE_TYPE=node1
NODE_ID=node1
HOST=0.0.0.0
PORT=8000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Consensus Configuration
ELECTION_TIMEOUT_MIN=150
ELECTION_TIMEOUT_MAX=300
